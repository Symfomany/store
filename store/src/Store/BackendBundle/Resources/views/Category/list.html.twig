{% extends "StoreBackendBundle::layout.html.twig" %}


{% block titlepage %}
    <i class="fa fa-th"></i> Categories
{% endblock  %}

{% block content %}

    <div class="row">
        <a href="{{ path('store_backend_category_new') }}" class=" pull-right btn btn-success btn-lg">
            <i class="fa fa-plus"></i> Ajouter une catégorie
        </a>
    </div>

    <hr />

    <div class="alert alert-info alert-dark">
        {{ categories.getTotalItemCount }} catégories trouvés
    </div>
{% if categories is not empty %}

    <table class="table table-bordered table-primary">
        <thead>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Position</th>
            <th>Nb.de produits affectés</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="">{{ category.id }}</a></td>
                    <td><a href="">{{ category.title }}</a></td>
                    <td>{{ category.description }}</td>
                    <td><i class="fa fa-arrows"></i></td>
                    <td><span class="badge badge-info"><strong>{{ category.product|length }}</strong></span> produits</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle"
                                    data-toggle="dropdown">
                                <i class="fa fa-cogs"></i> Actions&nbsp;<i class="fa fa-caret-down"></i></button>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('store_backend_category_edit', {"id" : category.id}) }}"><i class="fa fa-pencil"></i> Editer</a></li>
                                <li><a href="{{ path('store_backend_category_remove', {"id" : category.id}) }}"><i class="fa fa-times"></i> Supprimer</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-danger alert-dark">
        <strong>Attention</strong> Aucun résultat de trouvé
    </div>
{% endif %}

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}


