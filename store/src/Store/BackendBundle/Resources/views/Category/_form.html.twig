{{ form_start(form) }}

<div class="row">
    <div class="col-md-8">
        {{ form_row(form.title) }}
    </div>
    <div class="col-md-4">
        {{ form_row(form.file) }}
        {% if app.request.attributes.get('_route') == "store_backend_category_edit" %}
            {% if category.image is not empty %}
                <img src="{{ asset('uploads/category/' ~ category.image) }}" class="img-thumbnail" />
            {% endif %}
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {{ form_row(form.description) }}
    </div>
    <div class="col-md-12">
        {{ form_row(form.product) }}
    </div>
</div>



{#{#btn envoyer#}
    {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}

{# ATTENTION: token à ne pas oublier #}
    {{ form_widget(form._token) }}

    {# Crée une balise fermante </form>#}
{{ form_end(form, {'render_rest': false}) }}